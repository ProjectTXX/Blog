<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.group.blogapi.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.group.blogapi.domain.User">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,password,
        nickname,email,state,
        code
    </sql>
    <insert id="registerUser" parameterType="com.group.blogapi.domain.User" useGeneratedKeys="true" keyProperty="id">
        insert into user values(#{id},#{username}, #{password}, #{nickname}, #{email}, #{avatar}, #{createTime},#{updateTime},#{role})
    </insert>
    <select id="getUserByUsernameAndPassword" resultType="com.group.blogapi.domain.User">
        select * from user where username = #{username} and password = #{password}
    </select>
</mapper>